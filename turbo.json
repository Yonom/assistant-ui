{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.*", "!.next", "!.turbo"],
      "outputs": ["dist", ".next/**", "!.next/cache/**", "public/registry/**"]
    },
    "lint": {},
    "deploy": {
      "dependsOn": ["build", "lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
